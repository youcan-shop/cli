{
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint --fix",
    "release": "pnpm build && bumpp packages/*/package.json --commit \"release: v\" --push --tag && pnpm -r release"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@youcan/eslint-config": "^2.4.2",
    "bumpp": "^9.2.0",
    "eslint": "^8.50.0"
  }
}
