{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint --fix packages/**/*.{ts,js,json}",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "release": "pnpm build && bumpp packages/*/package.json --commit \"release: v\" --push --tag && pnpm -r release"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.18.0",
    "@vitest/ui": "^2.1.8",
    "@youcan/lint": "^3.0.6",
    "bumpp": "^9.2.0",
    "dotenv": "^16.3.1",
    "eslint": "^9.16.0",
    "eslint-plugin-format": "^0.1.3",
    "glob": "^11.0.0",
    "rollup": "^4.27.4",
    "rollup-plugin-node-externals": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.8.1",
    "typescript": "5.1.6",
    "vitest": "^2.1.8"
  },
  "pnpm": {
    "overrides": {
      "braces@<3.0.3": ">=3.0.3",
      "ejs@<3.1.10": ">=3.1.10",
      "tar@<6.2.1": ">=6.2.1",
      "ws@>=8.0.0 <8.17.1": ">=8.17.1"
    }
  }
}
